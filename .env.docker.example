# Docker Environment Configuration for TA Profiler
# Copy this file to .env and fill in your values

# Feedly API Configuration
# Get your API token from https://feedly.com/i/team/api (Enterprise clients only)
FEEDLY_API_TOKEN=your_feedly_api_token_here
MAX_ACTORS_TO_ENRICH=50

# Enricher Configuration
# Run mode: 'once' (run and exit for cron) or 'scheduled' (built-in scheduler)
ENRICHER_MODE=once

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_secret_key_here_generate_a_random_one

# Proxy Configuration (Optional)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# Database Configuration
DATABASE_URI=sqlite:////data/taprofiler.db
